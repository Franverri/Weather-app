        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:id="@+id/tarjeta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="3">


                <TextView
                    android:gravity="left"
                    android:id="@+id/dia1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Hoy"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/colorDayBackground">


                    <TextView
                        android:id="@+id/temperaturaDia1"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="-"
                        android:textColor="@color/colorDayFont"/>

                    <ImageView
                        android:id="@+id/imagenDia1"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:src="@drawable/iempty"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@color/colorNightBackground">

                    <TextView
                        android:id="@+id/temperaturaNoche1"
                        android:gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="-"
                        android:textColor="@color/colorNightFont"/>

                    <ImageView
                        android:id="@+id/imagenNoche1"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:src="@drawable/iempty"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

